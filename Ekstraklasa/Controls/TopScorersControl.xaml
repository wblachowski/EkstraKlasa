<UserControl x:Class="Ekstraklasa.TopScorersControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ekstraklasa"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="600"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:dragablz="http://dragablz.net/winfx/xaml/dragablz"
             Style="{StaticResource UserControlStyle}">
    <Grid>
        <DataGrid   IsReadOnly="True" ItemsSource="{Binding Path=Scorers}" CanUserSortColumns="True" CanUserAddRows="False" CanUserResizeColumns="False" AutoGenerateColumns="False"
                      materialDesign:DataGridAssist.CellPadding="13 8 8 8" materialDesign:DataGridAssist.ColumnHeaderPadding="8" Focusable="False"
                                    CellStyle="{StaticResource MaterialDesignDataGridCell}">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Bramki" SortMemberPath="Item2">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock HorizontalAlignment="Center" Text="{Binding Item2}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn  Binding="{Binding Item1.Firstname}"
                                     Header="Imię"
                                     />
                <DataGridTextColumn  Binding="{Binding Item1.Lastname}"
                                     Header="Nazwisko"
                                     />
                <DataGridTextColumn Binding="{Binding Item3}"
                                    Header="Drużyna"
                                   />

            </DataGrid.Columns>
        </DataGrid>
        <ProgressBar  Visibility="{Binding IsProgressBarVisible,Converter={StaticResource BooleanToVisibilityConverter}}" IsIndeterminate="True" materialDesign:TransitionAssist.DisableTransitions="True"  Height="1" Margin="0,46,0,0" VerticalAlignment="Top" HorizontalAlignment="Stretch"/>
    </Grid>
</UserControl>
